{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-ecomcheckout">

<div class="nav">
    <div class="nav-extended wrapper">
        {{widget('extendednavigation', 'desktopnavigation', {})|raw}}
    </div>
</div>

<header class="bk-header">   
    <div class="wrapper">
        <div class="companyheader">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {"business": ""})|raw}}
        </div>
    </div>
</header>

<div class="main wrapper clearfix">
    {{zone('main')|raw}}
</div>

<footer class="bk-footer">
    <div class="wrapper clearfix">
        {{widget('content', 'footercolumn1content', {"content":"<p>Lorem Ipsum Dolor</p>"})|raw}}
        {{widget('profile', 'footercolumn1socialicons', { 'profileType' : 'socialicons' })|raw}}
    </div>
</footer>

</div>

{% endblock %}
